@page "/"
@namespace Auth.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

@using Auth.Client
@using Microsoft.AspNetCore.Components.Authorization

@inject AuthenticationStateProvider AuthState

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blazor.Server</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/app.css" rel="stylesheet" />
    <link href="Auth.Client.styles.css" rel="stylesheet" />
    <script>
        function hideLoading() {
            document.getElementById("loader").remove();
        };
    </script>
</head>
<body>
    @if (!Request.Path.StartsWithSegments("/authentication"))
    {
        <component type="typeof(App)" render-mode="Static" />
    }
    else
    {
        <div id="loader" class="wrapper">
            <div class="windows">
                <div class="wBall">
                    <div class="wInnerBall"></div>
                </div>
                <div class="wBall">
                    <div class="wInnerBall"></div>
                </div>
                <div class="wBall">
                    <div class="wInnerBall"></div>
                </div>
                <div class="wBall">
                    <div class="wInnerBall"></div>
                </div>
                <div class="wBall">
                    <div class="wInnerBall"></div>
                </div>
            </div>
        </div>
        <component type="typeof(App)" render-mode="WebAssembly" />
    }

    <persist-component-state />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_content/Microsoft.AspNetCore.Components.WebAssembly.Authentication/AuthenticationService.js"></script>
    <script src="_framework/blazor.webassembly.js"></script>
</body>
</html>
